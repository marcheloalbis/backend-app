datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plan {
  id            Int            @id @default(autoincrement())
  name          String
  price         Float
  description   String?
  subscriptions Subscription[] // relaci贸n de uno a muchos con la tabla Subscription
}

model User {
  id             Int           @id @default(autoincrement())
  email          String        @unique
  name           String
  password       String
  active         Boolean
  subscriptionId Int?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id]) // relaci贸n de uno a uno con la tabla Subscription
}

model Subscription {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  users       User[] // relaci贸n de uno a muchos con la tabla User
  planId      Int
  plan        Plan    @relation(fields: [planId], references: [id]) // relaci贸n de muchos a uno con la tabla Plan
}
